{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@controllers/*": ["./controllers/*"],
            "@services/*": ["./services/*"],
            "@utils/*": ["./utils/*"],
            "@config/*": ["./config/*"],
            "@routes/*": ["./routes/*"],
            "types/*": ["./types/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
